@using System.Diagnostics.Eventing.Reader
@using Tweakers.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tweakers</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap - lumen.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
    <ul class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Tweakers", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @Html.ActionLink("Pricewatch", "Overview", "Product", new {area = ""}, new {@class = "navbar-brand"})
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Session["User"] != null)
                {
                    Account account = (Account) Session["User"];
                    @Html.ActionLink("Profile", "Profile", "Account", new {area = ""}, new {@class = "navbar-brand"})
                    @Html.ActionLink("Welcome " + account.UserName + " (Logout)", "Logout", "Account", new {area = ""}, new {@class = "navbar-brand"})
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Account", new {area = ""}, new {@class = "navbar-brand"})
                    @Html.ActionLink("Register", "Register", "Account", new {area = ""}, new {@class = "navbar-brand"})
                }
            </ul>
        </div>
    </ul>
</nav>
   

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My Tweakers.net Application</p>
    </footer>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>